drop table if exists test_oid_rep;
create table test_oid_rep(
    id int,
    a varchar(4000),
    b varchar(4000),
    c varchar(4000),
    d varchar(4000)
) with(orientation=column,deltarow_threshold=10);
declare
bigstr text;
begin
for i in 0..100 loop
bigstr=bigstr||' '||md5(i);
end loop;
for i in 0..100 loop
insert into test_oid_rep
values(i,bigstr||md5(i+1),bigstr||md5(i+2),bigstr||md5(i+3),bigstr||md5(i+4));
end loop;
end;
/
vacuum deltamerge test_oid_rep;
select md5(a || b|| c|| d) from test_oid_rep limit 1;
